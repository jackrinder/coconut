<h1>Listing seats</h1>

<table>
  <tr>
    <th>Flight</th>
    <th>Name</th>
    <th>Baggage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% seats.each do |seat| %>
  <tr>
    <td><%= seat.flight_id %></td>
    <td><%= seat.name %></td>
    <td><%= seat.baggage %></td>
    <td><%= link_to 'Show', flight_seat_path(seat.flight, seat) %></td>
    <td><%= link_to 'Edit', [:edit,seat.flight,seat] %></td>
    <td><%= link_to 'Destroy', flight_seat_path(seat.flight, seat), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

